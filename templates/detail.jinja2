{% extends "base.jinja2" %}

{% block title %}
{{ note.title }}{% endblock %}

{% block content %}
<div class="mt-4">
  <h1>
    {{ note.title }}
  </h1>
  <div class="text-muted mb-3">
    <small>创建于:
      {{ note.created_at }}</small>
    {% if note.edited_at %}
    <small class="ms-3">最后编辑:
      {{ note.edited_at }}</small>
    {% endif %}
  </div>
  <div class="card">
    <div class="card-body">
      <div class="markdown-content">
        {{ note.content|safe }}
      </div>
    </div>
  </div>
  <div class="mt-3">
    <a href="{{ url_for('update', id=note.id) }}" class="btn btn-primary floating-button" id="jumpToEdit">Edit</a>
  </div>
</div>
{% endblock %}